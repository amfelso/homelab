# Path to private key for SSH into nodes
SSH_KEY=/path/to/ssh/key

# Admin user for your nodes
ADMIN_USER=<your-admin-user>

# IP addresses of your nodes
NODE_01=<node-01-ip>
NODE_02=<node-02-ip>
NODE_03=<node-03-ip>
NODE_04=<node-04-ip>

# Control plane access
NODE_URL="https://$NODE_01:6443"
NODE_TOKEN=<your-node-token>

# Local kubeconfig for kubectl
KUBECONFIG=./config/cluster.yaml